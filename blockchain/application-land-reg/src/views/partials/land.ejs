    <label for="village">Village:</label>
    <select required name="village" class="form-control" id="village">
        <option value="" selected hidden>Select Village</option>
    </select>
</div>
<% } %> <% if (showKhasra) { %> <% if(typeof errorMsg != 'undefined') { %>
